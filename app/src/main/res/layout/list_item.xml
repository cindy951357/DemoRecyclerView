<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_rabbit"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_img_fname"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="@dimen/between_img_and_text"
        android:paddingLeft="@dimen/padding_top_item_name"
        android:paddingTop="@dimen/padding_left_item_name"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_rabbit"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>